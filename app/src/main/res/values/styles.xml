<resources>
    <!-- Base application theme - Enhanced with your navy/orange palette -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/light_navy_toolbar</item>
        <item name="colorPrimaryVariant">@color/dark_navy</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color - Using vibrant orange as accent -->
        <item name="colorSecondary">@color/vibrant_orange</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/dark_navy</item>
        <item name="android:navigationBarColor">@color/dark_navy</item>

        <!-- Component styles -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="buttonStyle">@style/Widget.App.Button</item>
        <item name="textInputStyle">@style/Widget.App.TextInput</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadline5">@style/TextAppearance.App.Title</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Label</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Value</item>
    </style>

    <!-- Enhanced Toolbar style -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/light_grey</item>
        <item name="android:background">@color/light_navy_toolbar</item>
        <item name="actionMenuTextColor">@color/vibrant_orange</item>
    </style>

    <!-- ImageView styles -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Text styles with improved hierarchy -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="fontFamily">cursive</item>
    </style>

    <style name="TextAppearance.App.Label" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.App.Value" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dirty_white</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <!-- Enhanced Button styles -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/vibrant_orange</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/light_navy_toolbar</item>
    </style>

    <!-- TextInput style -->
    <style name="Widget.App.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/vibrant_orange</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="boxBackgroundColor">@color/textbox_background</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
    </style>

    <!-- CardView style -->
    <style name="Widget.App.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/textbox_background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/vibrant_orange</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>